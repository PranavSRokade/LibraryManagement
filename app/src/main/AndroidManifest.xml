<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.librarymanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LibraryManagement">
        <activity
            android:name=".UserSignUp"
            android:exported="false" />
        <activity
            android:name=".UserLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddBook"
            android:exported="false"
            android:parentActivityName=".ListOfBooks" />
        <activity
            android:name=".AdministratorLogin"
            android:exported="false"
            android:parentActivityName=".ListOfBooks" />
        <activity
            android:name=".BookInformation"
            android:exported="false" />
        <activity
            android:name=".Adapter"
            android:exported="false" />
        <activity
            android:name=".ListOfBooks"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>